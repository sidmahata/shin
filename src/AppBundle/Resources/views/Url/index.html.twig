{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Url list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Userid</th>
                <th>Shortcode</th>
                <th>Alias</th>
                <th>Longurl</th>
                <th>Description</th>
                <th>Password</th>
                <th>Click</th>
                <th>Metatitle</th>
                <th>Metadescription</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('url_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.userId }}</td>
                <td>{{ entity.shortcode }}</td>
                <td>{{ entity.alias }}</td>
                <td>{{ entity.longurl }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.click }}</td>
                <td>{{ entity.metaTitle }}</td>
                <td>{{ entity.metaDescription }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('url_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('url_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('url_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
